  <div class="bg-gray-cool flex justify-end h-8">
    <% if session[:current_user_id].present? %>
      <% if request.path == missions_path %>
        <div class="text-center bg-red-500 w-1/12 rounded-full my-auto">
          <%= link_to '刪除會員資料', '' %></div>
        <div class="text-center bg-green-500 w-1/12 rounded-full my-auto">
      <% else %>
        <div class="text-center bg-green-500 w-1/12 rounded-full my-auto">
          <%= link_to '修改會員資料', '' %></div>
        <div class="text-center bg-red-500 w-1/12 rounded-full my-auto">
      <% end %>
          <%= link_to '登出', logout_path, method: :delete,
                                           data: { confirm: '確認登出?' } %></div>
    <% else %>
      <% if request.path == login_path %>
          <div class="bg-gray-dark w-full"></div>
      <% else %>
          <div class="text-center bg-green-500 w-1/12 rounded-full my-auto">
            <%= link_to '登入會員', login_path %></div>
      <% end %>
    <% end %>
  </div>


